<div class="product-version-field-container">
  {{multi-select
    content=products
    valueProperty="name"
    nameProperty="name"
    value=buffered.product
    onChange=(action "updateProductTags")
    options=(hash none="cribl_tiered_tagging.product.none")
  }}
  <div class="desc">
    {{i18n "cribl_tiered_tagging.product.input_description"}}
  </div>
</div>

<div class="product-version-field-container">
  {{#if showVersions}}
    {{multi-select
      content=versions
      valueProperty="name"
      nameProperty="name"
      value=buffered.versions
      onChange=(action "updateVersionTags")
      options=(hash none="cribl_tiered_tagging.version.none")
    }}
    <div class="desc">
      {{i18n "cribl_tiered_tagging.version.input_description"}}
    </div>

    {{popup-input-tip validation=versionValidation}}
  {{/if}}
</div>

<div class="product-version-field-container">
  {{mini-tag-chooser
    value=buffered.plainTags
    onChange=(action "updatePlainTags")
    options=(hash
      filterable=true
      categoryId=buffered.category_id
      minimum=minimumRequiredTags
    )
  }}
  <div class="desc">
    {{i18n "cribl_tiered_tagging.other.input_description"}}
  </div>
</div>